<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="zaraga.weather.Views.IconView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:zaraga.weather.Views"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI">

    <VerticalStackLayout>
        <skia:SKLottieView
            HeightRequest="150"
            IsVisible="{Binding AnimatedVisible}"
            RepeatCount="-1"
            Source="{Binding ImageSource}"
            WidthRequest="150" />

        <Image
            HeightRequest="150"
            IsVisible="{Binding StatickVisible}"
            Source="{Binding IconSource}"
            WidthRequest="150" />
    </VerticalStackLayout>


</ContentView>