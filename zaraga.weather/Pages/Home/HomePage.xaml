<?xml version="1.0" encoding="utf-8" ?>
<layouts:LoadingContentPage
    x:Class="zaraga.weather.Pages.Home.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layouts="clr-namespace:zaraga.weather.Layouts"
    xmlns:local="clr-namespace:zaraga.weather.Pages.Home"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:views="clr-namespace:zaraga.weather.Views"
    x:Name="page"
    Title="Inicio"
    Shell.NavBarIsVisible="False"
    ShowLoadingBar="{Binding Source={x:Reference page}, Path=BindingContext.IsLoading}">

    <layouts:LoadingContentPage.BindingContext>
        <local:HomeViewModel />
    </layouts:LoadingContentPage.BindingContext>

    <RefreshView Command="{Binding GetGurrentWeatherCommand}" IsRefreshing="{Binding IsLoading}">
        <ScrollView
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Vertical"
            VerticalScrollBarVisibility="Always">
            <StackLayout Padding="30" Spacing="2">

                <Label FontSize="Title" Text="UbicaciÃ³n actual" />
                <Border Padding="10,5" StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout>
                        <Label Text="{Binding CurrentWeather.location.name}" />
                        <Label Text="{Binding CurrentWeather.location.region}" />
                        <Label Text="{Binding CurrentWeather.location.country}" />
                        <Label Text="{Binding CurrentWeather.location.localtime, StringFormat='{0}: yyyy-MM-dd'}" />
                        <HorizontalStackLayout>
                            <Label Text="{Binding CurrentWeather.location.lat}" />
                            <Label Text=" , " />
                            <Label Text="{Binding CurrentWeather.location.lon}" />
                        </HorizontalStackLayout>
                        <Label Text="{Binding CurrentWeather.current.is_day}" />

                        <Image
                            HeightRequest="128"
                            Source="{Binding CurrentWeather.current.condition.icon, Converter={StaticResource WebImageConverter}}"
                            WidthRequest="128" />
                        <!--  binding con la referencia por nombre  -->
                        <views:IconView
                            HeightRequest="128"
                            IconBindable="{Binding BindingContext.CurrentCondition, Source={x:Reference page}, Converter={StaticResource IconCodeConverter}}"
                            IsVisible="False"
                            WidthRequest="128" />

                    </VerticalStackLayout>
                </Border>

                <Label FontSize="Title" Text="Viento" />
                <Border Padding="10,5" StrokeShape="RoundRectangle 10">
                    <Label Text="Viento"></Label>
                </Border>

                <Label Text="{Binding CompleteJson}" />

            </StackLayout>
        </ScrollView>
    </RefreshView>


</layouts:LoadingContentPage>