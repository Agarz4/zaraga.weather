<?xml version="1.0" encoding="utf-8" ?>
<layouts:LoadingContentPage
    x:Class="zaraga.weather.Pages.Home.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layouts="clr-namespace:zaraga.weather.Layouts"
    xmlns:local="clr-namespace:zaraga.weather.Pages.Home"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:views="clr-namespace:zaraga.weather.Views"
    x:Name="page"
    Title="Inicio"
    Shell.NavBarIsVisible="False"
    ShowLoadingBar="{Binding Source={x:Reference page}, Path=BindingContext.IsLoading}">

    <layouts:LoadingContentPage.BindingContext>
        <local:HomeViewModel />
    </layouts:LoadingContentPage.BindingContext>

    <RefreshView Command="{Binding GetGurrentWeatherCommand}" IsRefreshing="{Binding IsLoading}">
        <ScrollView
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Vertical"
            VerticalScrollBarVisibility="Always">
            <StackLayout Padding="30" Spacing="10">

                <Label
                    HorizontalOptions="Center"
                    MinimumHeightRequest="20"
                    MinimumWidthRequest="50"
                    Text="{Binding CurrentWeather.location.name}"
                    VerticalOptions="Center" />

                <Grid>
                    <Image
                        HeightRequest="100"
                        Source="{Binding CurrentWeather.current.condition.icon, Converter={StaticResource WebImageConverter}}"
                        WidthRequest="100" />


                    <!--  binding con la referencia por nombre  -->

                    <views:IconView BackgroundColor="Transparent" IconBindable="{Binding BindingContext.CurrentCondition, Source={x:Reference page}}" />
                </Grid>

                <Label Text="{Binding CompleteJson}" />

            </StackLayout>
        </ScrollView>
    </RefreshView>


</layouts:LoadingContentPage>